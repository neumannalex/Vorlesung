@inherits LayoutComponentBase

@using Vorlesung.Client.Authentication

<AntDesign.Layout Style="min-height: 100vh;" Class="site-layout">
    <Header Style="padding: 0 20px;">
        <div style="font-weight: 600; font-size: 30px; color: white; float: left">
            Vorlesung
        </div>
        <Menu Mode="MenuMode.Horizontal" Theme="MenuTheme.Dark" Style="float: right">
            <LoginMenu />
        </Menu>
    </Header>
    <AntDesign.Layout>
        <Sider Collapsible Collapsed=@collapsed OnCollapse=@onCollapse Width="230">
            <NavMenu />
        </Sider>
        <AntDesign.Layout Class="site-layout">
            <Content Style="margin:16px;">
                <div id="main-content-body" class="site-layout-background" style="padding:24px; min-height: 360px">
                    @Body
                </div>
            </Content>
            <Footer Style="text-align:center ">Vorlesung ©2020 Created by Alexander Neumann</Footer>
        </AntDesign.Layout>
    </AntDesign.Layout>
</AntDesign.Layout>


@code {
    bool collapsed;

    void onCollapse(bool collapsed)
    {
        this.collapsed = collapsed;
    }
}


